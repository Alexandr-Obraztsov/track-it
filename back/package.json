{
	"name": "backend",
	"version": "1.0.0",
	"description": "Basic Node.js backend project",
	"main": "dist/server.js",
	"scripts": {
		"build": "tsc",
		"start": "node dist/server.js",
		"dev": "nodemon --exec ts-node src/server.ts",
		"dev:watch": "nodemon --watch '**/*.ts' --exec ts-node src/server.ts",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"format": "prettier --write src/**/*.ts",
		"format:check": "prettier --check src/**/*.ts",
		"check": "pnpm run lint && pnpm run format:check",
		"fix": "pnpm run lint:fix && pnpm run format"
	},
	"dependencies": {
		"@google/generative-ai": "^0.24.1",
		"@types/express": "^5.0.3",
		"@types/node": "^24.3.1",
		"dotenv": "^17.2.2",
		"express": "^4.18.2",
		"fluent-ffmpeg": "^2.1.3",
		"node-telegram-bot-api": "^0.66.0",
		"pg": "^8.16.3",
		"reflect-metadata": "^0.2.2",
		"typeorm": "^0.3.26",
		"typescript": "^5.9.2"
	},
	"devDependencies": {
		"@types/fluent-ffmpeg": "^2.1.27",
		"@types/node-telegram-bot-api": "^0.64.10",
		"@typescript-eslint/eslint-plugin": "^8.44.0",
		"@typescript-eslint/parser": "^8.44.0",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"nodemon": "^3.0.1",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2"
	}
}
